{
  "name": "rsilvavergara/roomvu-backend-challenge",
  "description": "Backend online assessment for Roomvu",
  "type": "project",
  "require": {
    "php": "^8.1",
    "symfony/console": "^6.0",
    "symfony/cache": "^6.0",
    "fakerphp/faker": "^1.19",
    "symfony/http-foundation": "^7.2"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/"
    }
  },
  "scripts": {
    "start:dev": "docker-compose up --build",
    "stop:dev": "docker-compose down",
    "logs:dev": "docker-compose logs -f",
    "restart:dev": "docker-compose restart",
    "test": "phpunit --bootstrap tests/autoload.php tests/",
    "test:coverage": "phpunit --bootstrap tests/autoload.php tests/ --coverage-html coverage"
  },
  "config": {
    "process-timeout": 0
  }
}
